{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "baseUrl": "./src",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
